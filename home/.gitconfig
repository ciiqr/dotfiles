[push]
	default = simple
	autoSetupRemote = true
[pull]
	rebase = true
[color]
	ui = true
[rerere]
	enabled = true
[init]
	defaultBranch = main
[gpg]
	program = gpg
[commit]
	gpgsign = true
[core]
	trustctime = false
	pager = delta
[pretty]
	mono = format:%C(yellow)%h%C(reset) %s%C(bold red)%d%C(reset) %C(green)%ad%C(reset) %C(blue)[%an]%C(reset)
[diff]
	renames = copies
	# tool = meld
	colorMoved = default
[difftool]
	prompt = false
[merge]
	# tool = meld
	conflictstyle = diff3
[mergetool]
	prompt = false
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true    # use n and N to move between diff sections
[alias]
	st = status
	br = branch
	cm = commit -m
	co = "!cd -- ${GIT_PREFIX:-.};git checkout"
	new = "!cd -- ${GIT_PREFIX:-.};~/.scripts/git.sh new"
	cmb = "!cd -- ${GIT_PREFIX:-.};~/.scripts/git.sh cmb"
	anp = "!cd -- ${GIT_PREFIX:-.};~/.scripts/git.sh anp"
	anpa = !~/.scripts/git.sh anpa
	anpu = !~/.scripts/git.sh anpu
	squash = "!cd -- ${GIT_PREFIX:-.};~/.scripts/git.sh squash"
	alias = "!cd -- ${GIT_PREFIX:-.};~/.scripts/git.sh alias"
	# diff
	dcw = "!cd -- ${GIT_PREFIX:-.};git diff --cached -w"
	dc = "!cd -- ${GIT_PREFIX:-.};git diff --cached"
	dcow = "!cd -- ${GIT_PREFIX:-.};git diff --color-words"
	dcwo = "!cd -- ${GIT_PREFIX:-.};git diff --cached --color-words"
	d = "!cd -- ${GIT_PREFIX:-.};git diff"
	# log
	lp = "!cd -- ${GIT_PREFIX:-.};git log --color --pretty=mono --relative-date --decorate"
	reflogp = reflog --pretty=mono
	# assume-unchanged
	hide = "!cd -- ${GIT_PREFIX:-.};git update-index --assume-unchanged"
	unhide = "!cd -- ${GIT_PREFIX:-.};git update-index --no-assume-unchanged"
	hidden = "!cd -- ${GIT_PREFIX:-.};git ls-files -v | grep \"^[[:lower:]]\" | cut -d\" \" -f2"
	# misc
	contributors = shortlog -s -n -e
	cloc = "!cd -- ${GIT_PREFIX:-.};cloc --vcs git"
	tree = "!cd -- ${GIT_PREFIX:-.};tree --gitignore -I '.git' -a"
	repo = "!cd -- ${GIT_PREFIX:-.};~/.scripts/git.sh repo"
	find-pending-changes-to-base = "!cd -- ${GIT_PREFIX:-.};~/.scripts/git.sh find-pending-changes-to-base"
	external = !~/.scripts/git.sh external
	# github
	admins = !~/.scripts/git.sh admins
