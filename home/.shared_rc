#!/usr/bin/env bash

export MACRO_EDITOR='code' # TODO: may want to check if code exists
export EDITOR='edit'
export PAGER='less'
export LESS='-R -F'
export TIMEFMT='Real: %E User: %U System: %S Percent: %P Cmd: %J'
export DIRENV_LOG_FORMAT=
export CLICOLOR=1 # fix ls --color=auto on macos
export GPG_TTY
GPG_TTY="$(tty)"

tabs -4

alias grep='grep --color'
alias egrep='egrep --color'
alias man='man -a'
alias rm=' rm'     # don't keep rm in history
alias sudo='sudo ' # Enable aliases to be sudo'ed
alias ls='ls --color=auto'
alias l='ls -A'
alias ll='ls -AlF'
alias '?'='type -af'
alias '??'='huh'
alias map='xargs -n1'
alias ymd='date "+%Y-%m-%d"'
alias broken-links='find . -type l -exec test ! -e {} ";" -print'
alias m='macro'
alias mr='macro run'
alias todo='git-find-changed-repos ~/{Projects,External,pentible,notch}'
alias path='echo "$PATH" | tr ":" "\n"'
alias ssh-keygen='ssh-keygen -t rsa -b 4096 -o -N ""'
alias ssh-fingerprint='ssh-keygen -l -E md5 -f' # get ssh key fingerprint same way as github
alias remote-ip='curl icanhazip.com'
alias drun='docker run --rm -it'
alias dc=docker-compose
alias code='code -n'
alias syncthing-conflicts='find ~/{Docs,Projects,Inbox,Screenshots,.wallpapers,.archive} -iname "*.sync-conflict-*"'
alias mime-type='file --mime-type'
alias find-contains='grep -rl'
alias ff='fd --hidden --exclude .git'
alias rg='rg --hidden'
alias repo='git repo'
alias yml='yq -y . | bat --language=yaml'
alias ts-node='ts-node-esm -O "{\"isolatedModules\": false, \"esModuleInterop\": true}" -i'
alias krun='~/.scripts/kubernetes.sh run'

# git
gcd() {
    declare root
    root="$(git rev-parse --show-toplevel)" || return "$?"

    cd "${root}/${1}" || return "$?"
}

# nix
. source-if-exists '/nix/var/nix/profiles/default/etc/profile.d/nix-daemon.sh'

# shared
. source-if-exists "${HOME}/.shared_rc.d/${DOTFILES_MACHINE:-}"
