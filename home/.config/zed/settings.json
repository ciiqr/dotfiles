// documentation: https://zed.dev/docs/configuring-zed
{
    // editor
    "base_keymap": "SublimeText",
    "theme": "Ayu Dark",
    "ui_font_family": "Inconsolata",
    "buffer_font_family": "Inconsolata",
    "ui_font_size": 16,
    "buffer_font_size": 18,
    "cursor_blink": false,
    "wrap_guides": [80, 120],
    "features": {
        "copilot": false
    },
    "extend_comment_on_newline": false,
    "tabs": { "close_position": "right" },
    // "show_whitespaces": "all",
    // "file_scan_exclusions": null,

    // formatter
    "prettier": {
        // TODO: atm this doesn't seem to pick up my project settings (which normally comes from prettier reading the tab size from editorconfig)
        "tabWidth": 4
    },
    "tab_size": 4,

    // languages
    "lsp": {
        // TODO: replicate
        // "editor.codeActionsOnSave": { "source.fixAll.eslint": "explicit" }
        // TODO: replicate
        // "eslint.options": { "reportUnusedDisableDirectives": "error" },
        // TODO: replicate
        // "eslint.problems.shortenToSingleLine": true,
        // TODO: replicate, doesn't seem to be supported yet
        // "eslint": {
        //     "initialization_options": {
        //         "rulesCustomizations": [
        //             // set all eslint errors/warnings to show as warnings
        //             { "rule": "*", "severity": "warn" },
        //             // disable import/no-unused-modules from showing (mostly just annoying while in the middle of coding)
        //             { "rule": "import/no-unused-modules", "severity": "off" }
        //         ]
        //     }
        // }
        // TODO: idk, something like:
        // "yaml-language-server": {
        //     "initialization_options": {
        //         "yaml.schemas": {
        //             "https://json.schemastore.org/github-workflow": "/.github/workflows/*.yml"
        //         }
        //     }
        // }
    },
    "language_overrides": {
        "YAML": {
            "tab_size": 2,
            "prettier": {
                // TODO: atm this doesn't seem to pick up my project settings (which normally comes from prettier reading the tab size from editorconfig)
                "tabWidth": 2
            },
            // TODO: remove once schema overriding works...
            "enable_language_server": false
        },
        "TypeScript": {
            "format_on_save": {
                "external": {
                    "command": "node_modules/.bin/prettier",
                    "arguments": ["--stdin-filepath", "{buffer_path}"]
                }
            }
        },
        "TSX": {
            "format_on_save": {
                "external": {
                    "command": "node_modules/.bin/prettier",
                    "arguments": ["--stdin-filepath", "{buffer_path}"]
                }
            }
        },
        "JavaScript": {
            "format_on_save": {
                "external": {
                    "command": "node_modules/.bin/prettier",
                    "arguments": ["--stdin-filepath", "{buffer_path}"]
                }
            }
        }
    }
}
