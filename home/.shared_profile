#!/usr/bin/env bash

umask 022

export PATH="${HOME}/.local/bin:${HOME}/.nk/bin:${PATH}"

. source-if-exists ~/.shared_profile.d/nk-vars

get_hostname() {
    if [[ -n "$HOST" ]]; then
        echo "$HOST"
    elif [[ -n "$HOSTNAME" ]]; then
        echo "$HOSTNAME"
    else
        hostname
    fi
}

export HOSTNAME="${HOSTNAME:-$(get_hostname)}"
export DOTFILES_MACHINE="${DOTFILES_MACHINE:-$HOSTNAME}"

if command-exists ssh-agent; then
    export SSH_AUTH_SOCK="${HOME}/.ssh/ssh-agent.${DOTFILES_MACHINE}.sock"

    # NOTE: can kill the agent with: eval $(ssh-agent -k)
    if ! ssh-add -l >/dev/null 2>&1; then
        rm -f "${SSH_AUTH_SOCK}" # >/dev/null 2>&1
        eval "$(ssh-agent -s -a "$SSH_AUTH_SOCK")" >/dev/null

        if [[ -d "${HOME}/.ssh/keys" ]]; then
            while IFS= read -r -d $'\0' key; do
                ssh-add "$key" 2>/dev/null
            done < <(find "${HOME}/.ssh/keys" ! -type d ! -iname '*.pub' -print0)
        fi
    fi
fi

# brew
if [[ -x /opt/homebrew/bin/brew ]]; then
    export HOMEBREW_NO_ANALYTICS=1
    eval "$(/opt/homebrew/bin/brew shellenv)"
fi

# gcloud
if [[ -n "$HOMEBREW_PREFIX" ]]; then
    if [[ -n "$ZSH_VERSION" ]]; then
        . source-if-exists "${HOMEBREW_PREFIX}/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/path.zsh.inc"
    else
        . source-if-exists "${HOMEBREW_PREFIX}/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/path.bash.inc"
    fi
fi

# TODO: need a better way of handling stuff like this...
. source-if-exists ~/.shared_profile.d/private-development
. source-if-exists "${HOME}/.shared_profile.d/${DOTFILES_MACHINE}"

# update path with external processes
if command-exists launchctl; then
    launchctl setenv PATH "$PATH"
fi
