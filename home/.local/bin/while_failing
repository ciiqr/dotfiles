#!/usr/bin/env bash

# TODO: fix so this is fine
# set -e

. ~/.scripts/lib/output.sh

declare retCode=1
declare temp
temp="$(mktemp)"
declare count=0

while [[ "$retCode" != '0' ]]; do
    "$@" >"$temp" 2>&1
    retCode="$?"

    clear
    cat "$temp"

    if [[ "$retCode" != '0' ]]; then
        ((count++))
        output::failure -n "${count} runs without success"
        echo ":" "$@"
    fi
done

output::success -n "${count} runs without success"
echo ":" "$@"
