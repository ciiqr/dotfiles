#!/usr/bin/env bash

set -e

declare name="$1"
if [[ -z "$name" ]]; then
    echo 'usage: generate-pem <key-name>'
    exit 1
fi

# RSA Private Key
openssl genrsa -out "$name".pem 4096

# OpenSSL public key
# openssl rsa -in "$name".pem -pubout > "$name".pub

# OpenSSH public key
chmod 0600 "$name".pem
ssh-keygen -y -f "$name".pem > "$name".pub
