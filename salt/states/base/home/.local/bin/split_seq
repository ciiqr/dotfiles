#!/usr/bin/env bash

set -e

declare sections="$1"

if [[ "$#" != 1 ]]; then
    echo '# split sequence into N sections of approximately equal size'
    echo 'usage: split_seq <sections>'
    echo '   ie. print_seq 1 10 | split_seq 2'
    echo '       1 2 3 4 5'
    echo '       6 7 8 9 10'
    echo '   ie. print_seq 1 5 | split_seq 4'
    echo '       1 2 3'
    echo '       4 5'
    exit 1
fi

if ((sections < 1)); then
    echo 'split_seq: must be at least 1 section'
    exit 1
fi

# read stdin
readarray -t sequence

# determine sequence length
declare length="${#sequence[@]}"

# split
declare min_n_per_section="$((length/sections))" # quotient
declare remainder="$((length%sections))" # remainder

# TODO: Maybe alternatively could print on newlines with a divider?
declare index=0
for (( i = 0; i < sections; i++ )); do
    declare extra="$((remainder - i > 0 ? 1 : 0))"
    declare section_length="$((min_n_per_section + extra))"

    for (( j = 0; j < section_length; j++ )); do
        declare element="${sequence[index]}"
        echo -n "${element} "

        index=$((index+1))
    done
    echo
done
