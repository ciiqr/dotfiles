Vagrant.configure(2) do |config|
    {% if grains['configDir'] -%}
    {%- set configDir = grains['configDir'] -%}
    config.vm.synced_folder "{{ configDir }}", "/config"
    {%- endif %}

    {% if grains['privateConfigDir'] -%}
    {%- set privateConfigDir = grains['privateConfigDir'] -%}
    config.vm.synced_folder "{{ privateConfigDir }}", "/config-private"
    {%- endif %}

    config.vm.provision :shell, path: "~/.vagrant.d/provision.sh"
end
