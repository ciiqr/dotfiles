#!/bin/bash

# core
# - log file (absolute path, stdout, stderr)
chunkc core::log_file stdout
# - log level: (none, debug, profile, warn, error)
chunkc core::log_level warn
# - where to look for plugins
chunkc core::plugin_dir ~/.chunkwm_plugins
# - don't automatically reload changed plugins
chunkc core::hotload 0


# unload existing (to support live reloading)
chunkc core::unload border.so
chunkc core::unload tiling.so
chunkc core::unload ffm.so


# TODO: custom bar
chunkc set custom_bar_enabled            0
chunkc set custom_bar_all_monitors       0
chunkc set custom_bar_offset_top         22
chunkc set custom_bar_offset_bottom      0
chunkc set custom_bar_offset_left        0
chunkc set custom_bar_offset_right       0

# global desktop (default desktop level settings)
chunkc set global_desktop_mode           bsp
chunkc set global_desktop_offset_top     0
chunkc set global_desktop_offset_bottom  0
chunkc set global_desktop_offset_left    0
chunkc set global_desktop_offset_right   0
chunkc set global_desktop_offset_gap     0

# TODO: step sizes (for incrementing/decrementing at runtime, need keybindings for these first)
chunkc set desktop_padding_step_size     10.0
chunkc set desktop_gap_step_size         5.0

# TODO: bsp
chunkc set bsp_spawn_left                0
chunkc set bsp_optimal_ratio             1.618
chunkc set bsp_split_mode                vertical
chunkc set bsp_split_ratio               0.5

# TODO: preferred layout for term/sublime
# root vertical 0.4
# left_root horizontal 0.5
# left_leaf
# right_leaf
# right_root horizontal 0.5
# left_leaf
# right_leaf

# TODO:
chunkc set monitor_focus_cycle           1
chunkc set window_focus_cycle            monitor

# TODO:
chunkc set mouse_follows_focus           intrinsic
chunkc set window_float_next             0
chunkc set window_region_locked          1

# move windows with mouse/key
chunkc set mouse_move_window             alt 1
chunkc set mouse_resize_window           alt 2
chunkc set mouse_motion_interval         35

# border when moving windows with mouse
chunkc set preselect_border_color        0xff4dccb0
chunkc set preselect_border_width        2

# floating always ontop
chunkc set window_float_topmost 1

# TODO:
chunkc set window_fade_inactive          0
chunkc set window_fade_alpha             0.85
chunkc set window_fade_duration          0.25
chunkc set window_use_cgs_move           0

# TODO: border focused
# chunkc set focused_border_color          0xff0f6288
chunkc set focused_border_color          0xff800000
chunkc set focused_border_width          2
chunkc set focused_border_radius         0
chunkc set focused_border_skip_floating  0
chunkc set focused_border_skip_monocle   0

# mouse over focus
chunkc set ffm_bypass_modifier           fn
chunkc set ffm_standby_on_float          1

# floating always ontop
chunkc set window_float_topmost 1


# load plugins
chunkc core::load border.so
chunkc core::load tiling.so
chunkc core::load ffm.so


# application rules
chunkc tiling::rule --owner Finder --name Copy --state float &
chunkc tiling::rule --owner \"App Store\" --state float &
chunkc tiling::rule --owner Emacs --except "^$" --state tile &
